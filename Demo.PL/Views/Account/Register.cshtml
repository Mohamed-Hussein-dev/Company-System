@model ApplicationUserViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="Register" method="post" class="form-detail" id="myform">
	<h2>REGISTER FORM</h2>
	<div class="form-group">
		<div class="form-row form-row-1">
			<label for="first_name">First Name</label>
			<input type="text" asp-for="FName" id="first_name" class="input-text">
			<span asp-validation-for="FName" class="text-danger"></span>
		</div>

		<div class="form-row form-row-1">
			<label for="last_name">Last Name</label>
			<input type="text" asp-for="LName" id="last_name" class="input-text">
			<span asp-validation-for="LName" class="text-danger"></span>
		</div>
	</div>

	<div class="form-row">
		<label for="your_email">Your Email</label>
		<input type="text" asp-for="Email" id="your_email" class="input-text">
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>

	<div class="form-group">

		<div class="form-row form-row-1 ">
			<label for="password">Password</label>
			<input type="password" asp-for="Password" id="password" class="input-text">
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>

		<div class="form-row form-row-1">
			<label for="comfirm-password">Comfirm Password</label>
			<input type="password" asp-for="ConfirmPassword" id="comfirm_password" class="input-text">
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group mb-3">
		
			<input asp-for="IsAgree" class="form-check-input m-1" type="checkbox" style="width: 0.5em; height: 0.5em;">
			<label class="form-check-label"> I agree to the Terms and Conditions</label>
	</div>
	<div class="form-row-last">
		<input type="submit" class="register" value="Register">
		<p>Have Account ? <a class="btn btn-primary" asp-action="LogIn">LogIn</a></p>
	</div>

</form>

@section ValidationSectionScripts {
	<partial name="_ValidationScriptsPartial"></partial>
}