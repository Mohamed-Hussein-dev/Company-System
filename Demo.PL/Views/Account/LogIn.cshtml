@model LogInViewModel
@{
    ViewData["Title"] = "LogIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div asp-validation-summary="All"></div>
<form asp-action="LogIn" method="post" class="form-detail" id="myform">
	<h2>Log In FORM</h2>
	

	<div class="form-row">
		<label for="your_email">Your Email</label>
		<input type="text" asp-for="Email" id="your_email" class="input-text">
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>

	<div class="form-group">

		<div class="form-row form-row-1 ">
			<label for="password">Password</label>
			<input type="password" asp-for="Password" id="password" class="input-text">
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>

	</div>
	<div class="form-group mb-3">

		<input asp-for="RememberMe" class="form-check-input m-1" type="checkbox" style="width: 0.5em; height: 0.5em;">
		<label class="form-check-label">Remember me</label>
	</div>
	<div class="form-row-last">
		<input type="submit" class="register" value="Log In">
		<p>don't Have Account ? <a class="btn btn-primary" asp-action="Register">Sign Up</a></p>
	</div>

</form>

@section ValidationSectionScripts {
	<partial name="_ValidationScriptsPartial"></partial>
}
