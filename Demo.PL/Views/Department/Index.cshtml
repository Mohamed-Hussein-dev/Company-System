@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<div asp-validation-summary="All"></div>
<a asp-action="Create" class="btn btn-primary">Creat New Department</a>
@if (Model.Count() > 0)
{
    <h1>All Departments</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.Code)</td>
                <td>@Html.DisplayNameFor(D => D.Description)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>

        <tbody>
            @foreach(var department in Model)
            {
                
                <tr>
                    <td>@department.Name</td>
                    <td>@department.Code</td>
                    <td>@department.Description</td>
                    <partial name="_ButtonPartialView" model="department.Id"></partial>
                </tr>
                
            }
        </tbody>
    </table>
}
else
{
    <center>
        <div class= "mt- 3 alert alert-warning">
            <h2>There is no Departments</h2>
        </div>
    </center>
}



